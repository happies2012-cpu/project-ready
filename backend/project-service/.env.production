# Project Service Environment Variables
# PRODUCTION CONFIGURATION

# Server Configuration
PORT=3002
NODE_ENV=production

# Database Configuration (Cloud SQL)
DATABASE_URL=postgresql://username:password@/database?host=/cloudsql/project-id:region:instance-name

# Redis Configuration (Cloud Memorystore)
REDIS_URL=redis://10.x.x.x:6379

# Auth Service URL
AUTH_SERVICE_URL=https://auth-service.run.app

# AWS S3 Configuration (or Google Cloud Storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
S3_BUCKET_NAME=project-ready-files
S3_ENDPOINT=https://s3.amazonaws.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/zip
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
